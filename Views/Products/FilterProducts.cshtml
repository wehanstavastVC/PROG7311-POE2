@model List<Product>

<h2>Filtered Products</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Date</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Date.ToShortDateString()</td>
                    <td>@product.Type</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products match the specified filter.</p>
}

